{{#if equipo}}
<div class='contenedor-equipo'>
    <form class='form-flex' action='/save' method="POST" enctype="multipart/form-data">
        <img class='imagen-club-grande' src={{equipo.crestUrl}} />
        <input style="align-self: center;" type="file" name='logo' value='Change logo'>
        <h2>{{equipo.name}}</h2>
        <table class='table tabla-equipo'>
            <tbody>
                <input type="hidden" name='id' value="{{equipo.id}}">
                <tr>
                    <td>Name</td>
                    <td><input name='name' value="{{equipo.name}}"></td>
                </tr>
                <tr>
                    <td>Short name</td>
                    <td><input name='shortName' value="{{equipo.shortName}}"></td>
                </tr>
                <tr>
                    <td>TLA</td>
                    <td><input name='tla' value="{{equipo.tla}}"></td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td><input name='address' value="{{equipo.address}}"></td>
                </tr>
                <tr>
                    <td>Phone number</td>
                    <td><input name='phone' value="{{equipo.phone}}"></td>
                </tr>
                <tr>
                    <td>Website</td>
                    <td><input name='website' value="{{equipo.website}}"></td>
                </tr>
                <tr>
                    <td>E-mail</td>
                    <td><input name='email' value="{{equipo.email}}"></td>
                </tr>
                <tr>
                    <td>Founded</td>
                    <td><input name='founded' value="{{equipo.founded}}"></td>
                </tr>
                <tr>
                    <td>Club Colors</td>
                    <td><input name='clubColors' value="{{equipo.clubColors}}"></td>
                </tr>
                <tr>
                    <td>Venue</td>
                    <td><input name='venue' value="{{equipo.venue}}"></td>
                </tr>
                <tr>
                    <td>Country</td>
                    <td><input name='country' value="{{equipo.area.name}}"></td>
                </tr>
            </tbody>
        </table>
        <div class="contenedor-botones">
            <button type="submit">Save</button>
        </div>
    </form>
</div>

{{/if}}